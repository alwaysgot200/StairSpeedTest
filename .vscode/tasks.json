        "env": {
          "PATH": "D:\\Programs\\scoop\\apps\\msys2\\current\\cmakeproxy;D:\\Programs\\scoop\\apps\\msys2\\current\\mingw64\\bin;D:\\Programs\\scoop\\apps\\msys2\\current\\usr\\bin;D:\\Programs\\scoop\\apps\\msys2\\current\\bin;${env:PATH}"
