        ".",
        "-B",
        "build.debug",
        "-G",
        "MinGW Makefiles",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_PREFIX_PATH=D:\\Programs\\scoop\\apps\\msys2\\current\\mingw64",
        "-DMINGW_RUNTIME_DIR=D:\\Programs\\scoop\\apps\\msys2\\current\\mingw64\\bin",
        "-DCMAKE_C_COMPILER=D:\\Programs\\scoop\\apps\\msys2\\current\\mingw64\\bin\\gcc.exe",
        "-DCMAKE_CXX_COMPILER=D:\\Programs\\scoop\\apps\\msys2\\current\\mingw64\\bin\\g++.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "D:\\Programs\\scoop\\apps\\msys2\\current\\cmakeproxy;D:\\Programs\\scoop\\apps\\msys2\\current\\mingw64\\bin;D:\\Programs\\scoop\\apps\\msys2\\current\\usr\\bin;D:\\Programs\\scoop\\apps\\msys2\\current\\bin;${env:PATH}"
