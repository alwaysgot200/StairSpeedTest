{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure CMake",
      "type": "process",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-G",
        "MinGW Makefiles",
        "-DCMAKE_BUILD_TYPE=Debug",
        "-DCMAKE_PREFIX_PATH=${env:MSYS2_ROOT}\\mingw64",
        "-DMINGW64_ROOT=${env:MSYS2_ROOT}\\mingw64",
        "-DCMAKE_C_COMPILER=${env:MSYS2_ROOT}\\mingw64\\bin\\gcc.exe",
        "-DCMAKE_CXX_COMPILER=${env:MSYS2_ROOT}\\mingw64\\bin\\g++.exe",
        "-DENABLE_RUNTIME_DLL_COPY=ON",
        "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
        "-DCMAKE_COLOR_MAKEFILE=ON",
        //"-DCMAKE_VERBOSE_MAKEFILE=ON",
        "-DCMAKE_C_FLAGS=-fdiagnostics-color=always",
        "-DCMAKE_CXX_FLAGS=-fdiagnostics-color=always",
        "-DCMAKE_COLOR_DIAGNOSTICS=ON",
        "-DCMAKE_SH=CMAKE_SH-NOTFOUND"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          // 这里从 Configure 阶段去掉 usr\\bin，避免 CMake 发现 sh.exe 后默认切到 MSYS Makefiles
          "PATH": "${env:MSYS2_ROOT}\\cmakeproxy;${env:MSYS2_ROOT}\\mingw64\\bin;${env:MSYS2_ROOT}\\bin;${env:PATH}",
          "TERM": "xterm-256color",
          "CLICOLOR": "1",
          "CLICOLOR_FORCE": "1",
          "GCC_COLORS": "error=01;31:warning=01;35:note=01;36:locus=00;34:caret=01;32:quote=01"
        }
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "label": "Build (Debug - MSYS2 bash)",
      "type": "process",
      "command": "cmake",
      "args": ["--build", "build", "-j"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "${env:MSYS2_ROOT}\\cmakeproxy;${env:MSYS2_ROOT}\\mingw64\\bin;${env:MSYS2_ROOT}\\usr\\bin;${env:MSYS2_ROOT}\\bin;${env:PATH}",
          // 与 Configure 阶段保持一致，确保构建阶段也有彩色输出
          "TERM": "xterm-256color",
          "CLICOLOR": "1",
          "CLICOLOR_FORCE": "1",
          "GCC_COLORS": "error=01;31:warning=01;35:note=01;36:locus=00;34:caret=01;32:quote=01"
        }
      },
      "dependsOn": "Configure CMake",
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean bin/lib (CMake target)",
      "type": "process",
      "command": "cmake",
      "args": ["--build", "build", "--target", "clean_outputs"],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PATH": "${env:MSYS2_ROOT}\\cmakeproxy;${env:MSYS2_ROOT}\\mingw64\\bin;${env:MSYS2_ROOT}\\usr\\bin;${env:MSYS2_ROOT}\\bin;${env:PATH}"
        }
      },
      "dependsOn": "Configure CMake",
      "problemMatcher": []
    },
    {
      "label": "Clean All (delete build folder)",
      "type": "process",
      "command": "cmd",
      "args": ["/c", "rmdir", "/S", "/Q", "build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Rebuild (Debug)",
      "type": "process",
      "command": "cmd",
      "args": ["/c", "echo", "Rebuild"],
      "dependsOrder": "sequence",
      "dependsOn": [
        "Clean bin/lib (CMake target)",
        "Build (Debug - MSYS2 bash)"
      ],
      "problemMatcher": []
    }
  ]
}
